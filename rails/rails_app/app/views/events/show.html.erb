<h1><%= @event.name %></h1>
<% if @likers.any? %>
	<div class="panel">
		<h3>Likers</h3>
		<ul>
			<% @likers.each do |liker| %>
				<li><%= link_to liker.name, user_path(liker.id) %></li>
			<% end %>
		</ul>
		<% if current_user %>
			<% if @current_like %>
				<%= button_to "UNLIKE", event_like_path(@event.id, @current_like.id), method: :delete, class: "button" %>
			<% else %>
				<%= button_to "LIKE", event_likes_path(@event.id), class: "button" %>
			<% end %>
		<% end %>
	</div>
<% end %>


<div class="panel">
	<div class="row">
		<div class="medium-3 columns">
			<%= image_for(@event) %>
		</div>
		<div class="medium-9 columns">
			<%= @event.description %>
		</div>
	</div>
</div>

<div class="panel">
	<div class="row">
		<div class="medium-2 columns">
			Wann
		</div>
		<div class="medium-10 columns">
			<%= @event.start_at %>
		</div>
	</div>

	<div class="row">
		<div class="medium-2 columns">
			Wo
		</div>
		<div class="medium-10 columns">
			<%= @event.location %>
		</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
			Preis
		</div>
		<div class="medium-10 columns">
			<%= format_price @event %>
		</div>
	</div>
</div>


<ul class="button-group even-3">
	<li><%= link_to "Back", events_path, class: "button" %></li>
	<li><%= link_to "Registrierungen", event_registrations_path(@event.id), class: "button" %></li>
	<li><%= link_to "Neue Registrierung", new_event_registration_path(@event.id),class: "button" %></li>
</ul>
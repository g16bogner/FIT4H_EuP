<%= form_tag(sessions_path) do %>
	<fieldset>
		<legend>Anmelden</legend>
		<div class="row">
			<div class="medium-2 columns">
				<%= label_tag :email %>
			</div>
			<div class="medium-10 columns">
				<%= text_field_tag :email %>
			</div>
		</div>

		<div class="row">
			<div class="medium-2 columns">
				<%= label_tag :password %>
			</div>
			<div class="medium-10 columns">
				<%= password_field_tag :password %>
			</div>
		</div>

		<%= submit_tag "Sign IN" %>
	</fieldset>
<% end %>